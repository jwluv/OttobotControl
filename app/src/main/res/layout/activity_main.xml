<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textViewConnectedBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonScanBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:text="scan Bluetooth"
        app:layout_constraintEnd_toEndOf="@+id/buttonR"
        app:layout_constraintStart_toStartOf="@+id/buttonL"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="L"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonC"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="75dp"
        android:text="U"
        app:layout_constraintStart_toEndOf="@+id/buttonL"
        app:layout_constraintTop_toBottomOf="@+id/buttonScanBT" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:text="R"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonC"
        app:layout_constraintStart_toEndOf="@+id/buttonC" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="@+id/buttonUp"
        app:layout_constraintTop_toBottomOf="@+id/buttonUp" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="D"
        app:layout_constraintStart_toStartOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/buttonC" />

    <Button
        android:id="@+id/buttonMoonwalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:text="moonwalk"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonBend"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="bend"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAscendingTurn"
        app:layout_constraintStart_toEndOf="@+id/buttonMoonwalk" />

    <Button
        android:id="@+id/buttonAscendingTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="26dp"
        android:text="ascending turn"
        app:layout_constraintBottom_toTopOf="@+id/buttonObstacle"
        app:layout_constraintStart_toEndOf="@+id/buttonBend" />

    <Button
        android:id="@+id/buttonUpdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="updown"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonObstacle"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonObstacle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="332dp"
        android:layout_marginBottom="331dp"
        android:text="obstacle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonBend"
        app:layout_constraintTop_toBottomOf="@+id/textViewConnectedBT" />
</android.support.constraint.ConstraintLayout>